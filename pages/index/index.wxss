/* 中间 私人FM */
.a {
  background-color: black;
  height: 16vh;
}

.a .a1 {
  display: flex;
}

.a .a1 view {
  flex: 1;
  font-size: 11pt;
  text-align: center;
}

.a .a1 image {
  width: 120rpx;
  height: 120rpx;
  display: block;
  margin: 30rpx auto;
}

.a .a1 text {
  color: aliceblue;
}

/* 推荐歌曲 */
.b {
  background-color: rgb(0, 0, 0);
  height: 100vh;
}

.b .b11 {
  color: aliceblue;
  font-size: 3vh;
}

.b .b1 {
  display: flex;
  flex: 1;
  flex-wrap: wrap;
}

.b .b1 view {
  margin: 16rpx auto;
  font-size: 11pt;
  color: aliceblue;
  text-align: center;
}

.b .b1 image {
  width: 200rpx;
  height: 200rpx;
  display: block;
  margin: 20rpx auto;
  border-radius: 10rpx;
  border: 3rpx solid #555;
}

.b .b1 text {
  color: aliceblue;
  /* width: 200rpx; */
  margin: 10rpx auto;
  font-size: 13pt;
}
